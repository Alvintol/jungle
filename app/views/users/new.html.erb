<h1 class="text-success d-flex align-items-center justify-content-center">Signup!</h1>
<div class="d-flex align-items-center justify-content-center">
  <%= form_for :user, url: users_url do |f| %>
    <table>
      <tr>
        <td>
          Name
        </td>
        <td>
          <%= f.text_field :name %>
        </td>
      </tr>
      <tr>
        <td>
          Email
        </td>
        <td>
          <%= f.text_field :email %>
        </td>
      </tr>
      <tr>
        <td>
          Password
        </td>
        <td>
          <%= f.password_field :password %>
        </td>
      </tr>
      <tr>
        <td>
          Password Confirmation
        </td>
        <td>
          <%= f.password_field :password_confirmation %>
        </td>
      </tr>
    </table>
    <div class="d-flex align-items-center justify-content-center">
    <%= f.submit "Submit", class: 'm-1 btn btn-success btn-rounded' %>
    </div>
  <% end %>
</div>

